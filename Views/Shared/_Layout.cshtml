<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/script.js"></script>
    <style>
        .div-footer {
            text-align: center;
            bottom: 0px;
            left: 0;
            height: 5px;
            width: 100%;
            text-align: center;
        }

        li.format-hello {
            padding-top: 15px;
            color: crimson;
        }
        /*#animation-top5:hover {
            color: white;
            text-shadow: 1px 1px 2px gray, 0 0 25px red, 0 0 5px red;
            height: 10px;
        }*/
        .search {
            text-align: center;
        }

        .navbar-inverse .navbar-brand {
            color: crimson;
            font-size: 40px;
            font-family: ui-monospace;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: crimson;
            font-size: 15px;
        }

        input, select, textarea {
            max-width: 500px;
        }

        .navbar-inverse .navbar-brand {
            color: crimson;
            font-size: 30px;
            font-family: ui-monospace;
        }

        aa.navbar-brand {
            padding-top: 10px;
        }

        img.header_logo.header-logo {
            left: 13%;
            position: absolute;
            top: 35%;
        }
    </style>
</head>
<body>
    <div>
        <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:antiquewhite">

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span>
                        <a href="@Url.Action("Home", "Product")">
                            <img src="~/Content/images/Null.jpg" class="header_logo header-logo" alt="#" height="70" width="120" />
                            @Html.ActionLink("NullStore", "Home", "Product", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </span>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Kênh người bán", "FormLogin", "Admin")</li>
                        <li>@Html.ActionLink("Hỗ trợ", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <span>
                                <a href="/ShoppingCart/ShowCart">
                                    <img src="@Url.Content("~/Content/images/giohang.jpg")" style="height:30px;width:30px;margin-top:10px;" />
                                </a>
                            </span>
                            @Html.Action("BagCart", "ShoppingCart")
                        </li>

                        <li class="format-hello">
                            @if (Session["NameUser"] == null)
                            {
                            <li> <a href="/LoginUser/RegisterUser"><span class="glyphicon glyphicon-user"></span>Đăng Ký </a></li>
                            <li> <a href="/LoginUser/FormLogin"><span class="glyphicon glyphicon-log-in"></span>Đăng Nhập</a></li>
                            <span>Xin chào quý khách !</span>
                        }
                        else
                        {
                            <li> <a href="@Url.Action("LogOutUser", "LoginUser")"><span class="glyphicon glyphicon-log-out"></span>Đăng Xuất</a></li>
                            <li> <text>Xin Chào </text> @Session["NameUser"] !</li>
                        }
                            </li>
                        </ul>
                    </div>
                </div>
                <div style="text-align:center;padding-top:10px;padding-bottom:10px">
                    @using (Html.BeginForm("Search", "Product"))
                    {
                        <input type="text" name="_name" style="width:1000px" />
                        <input type="submit" value="Tìm kiếm" />
                    }


                </div>
                @{Html.RenderAction("CategoryPartial", "Categories"); }

            </div>

        </div>
     
         
     
        <div class="container-fluid body-content" style="padding-top:50px">
            <div style="text-align:center;">

                <div id="div-content" style="border-radius: 10px;padding-bottom: 20px; padding-top: 10px">

                    @RenderBody()
                </div>
            </div>
        </div>
        <br />
        <footer>
            <div class="navbar navbar-inverse navbar-fixed-bottom" style="background-color: antiquewhite; text-align:center;border-radius:10px;padding-top:10px">
                @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
                <p>Bùi Đăng Khoa_21DH113768</p>
                @*<p>Địa chỉ: Trường Đại học Ngoại Ngữ Tin Học tp HCM</p>
                    <p>Thông tin liên hệ: 0123456789 </p>
                    <p>Địa chỉ email: Huflit@st.edu.vn</p>*@
            </div>
        </footer>




        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
