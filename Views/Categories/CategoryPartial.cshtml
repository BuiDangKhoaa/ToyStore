@using ToyStore.Models
@model List<Category>
    <style>       
        #div-u {
            padding-top: 3px;
            display: flex;
            background-color: antiquewhite;
            text-decoration: none;
            padding-bottom:10px;         
        }
        .div-cate {
            height: 30px;
            width: 100%;
        }
        a {
            color: #a94442;
            text-decoration: none;
            font-size: 20px;
            text-align: center;
        }
            a:hover {
                text-decoration: none;
            }
        /*Them*/
        ul#div-u {
            height: 35px;
            width: 1000px;
            background-color: antiquewhite;
            margin-left:20%;
            margin-right:auto;
           
            padding: 10px;
        }
        #div-u .div-cate a {
            color: black;
            padding-top: 0px;
            color: black;
            font-size: 15px;        
            padding-left: 50px;
            padding-right: 50px;
            background-color: antiquewhite;
        /*  border-radius: 10px;*/
           margin:5px;
        }
    </style>
<ul style="list-style-type:none;"id="div-u">
    @{ 
        foreach(var item in Model)
            {
                <li class="div-cate">
                    @Html.ActionLink(item.NameCate,"Index","Product",new {category=item.IDCate.Trim()},"")
                </li>
             
            }
    }
</ul>