@using ToyStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #div-ds {
        text-align: center;
        background-color: lightpink;
        height: 30px;
        margin-top: 10px;
        margin-bottom: 50px;
    }
    .MenuPage li {
        display: inline;
    }
    .btn-default {
        background-color: darksalmon;
    }
    .card-pro {
        border: 1px solid black;
        margin: 10px;
        padding: 10px;
        border-radius: 10px;
        background-color: white;
        padding-bottom: 10px;
    }
    h2 {
        padding-top: 5px;
        color: white;
    }
    .card-pro:hover {
        transform: scale(1.1);
    }
    span.field-validation-error {
        color: red;
    }
</style>
    <div style="border-radius: 10px; border: 1px solid black; background-color: lightpink; padding-top: 10px; margin-top: 50px ">
        <div id="div-ds"><h2>Danh sách sản phẩm</h2></div>
        <div class="container">
            <div class="row">
                @foreach (var pro in Model)
                {
                    <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card-pro">
                            <a href="/Product/DetailsList/@pro.ProductID"> <br /> <img src="@Url.Content(pro.ImagePro)" height="160" width="160" /></a>
                            <a href="/Product/DetailsList/@pro.ProductID"> <br />@Html.DisplayFor(model => pro.NamePro)</a>
                            <p>@Html.DisplayFor(model => pro.Price)</p>
                            <a href="/Product/DetailsList/@pro.ProductID" class="btn btn-default">Chi tiết</a>
                            <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="btn btn-default">Mua hàng</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        Trang @(Model.PageNumber) / @Model.PageCount
        <div class="MenuPage">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    </div>

