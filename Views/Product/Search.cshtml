@model IEnumerable<ToyStore.Models.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #div-ds {
        text-align: center;
        background-color: forestgreen;
        height: 50px;
        border-radius: 20px 20px 0 0;
        padding: 10px;
    }
</style>
<h2 id="div-ds">DANH SÁCH SẢN PHẨM</h2>
@using (Html.BeginForm("Search", "Product"))
{
    <div class="container">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card-pro">
                        @*<p>@Html.DisplayFor(model=>pro.ProductID)</p>*@
                        <img src="@Url.Content(pro.ImagePro)" height="150" width="150" ; />
                        <p>@Html.DisplayFor(model => pro.NamePro)</p>
                        <p>@Html.DisplayFor(model => pro.Price)</p>
                     
                        <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="btn btn-default">Mua hàng</a>
                        <a href="/Product/DetailsList/@pro.ProductID" class="btn btn-default">Chi tiết</a>
                    </div>
                </div>
            }
        </div>
    </div>
}

