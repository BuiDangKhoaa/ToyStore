@model IEnumerable<ToyStore.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Saler.cshtml";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Tạo khách hàng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           <b>Mã khách hàng</b>
        </th>
        <th>
            <b>Tên khách hàng</b>
        </th>
        <th>
            <b>Số điện thoại</b>
        </th>
        <th>
            <b>E-mail khách hàng</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailCus)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { name=item.NameCus}) |
            @Html.ActionLink("Chi tiết", "Details", new { name = item.NameCus }) |
            @Html.ActionLink("Xóa", "Delete", new { name = item.NameCus })
        </td>
    </tr>
}

</table>
